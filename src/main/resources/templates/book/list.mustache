{{>layouts/header}}

<style>
    /* 테이블의 thead를 상단에 고정 */
    .table-fixed thead {
        position: sticky;
        top: 0;
        z-index: 1;
        background-color: #fff; /* 헤더가 화면 위에 고정될 때 배경색을 지정합니다. */
    }

    /* 테이블의 tbody에 스크롤 추가 */
    .table-fixed tbody {
        overflow-y: auto;
        max-height: 600px; /* 테이블 목록이 화면에서 최대로 보일 수 있는 높이를 지정합니다. */
    }

    /* 테이블의 제목이 고정되도록 */
    .table-fixed th {
        position: sticky;
        top: 0;
    }
</style>

<div class="container">
    <table class="table table-fixed">
        <thead>
        <tr>
            <th scope="col">책장</th>
            <th scope="col">제목</th>
            <th scope="col">작가1</th>
            <th scope="col">작가2</th>
            <th scope="col">권수</th>
            <th scope="col">장르1</th>
            <th scope="col">장르2</th>
            <th scope="col">등급</th>
        </tr>
        </thead>
        <tbody>
        {{#bookList}}
            <tr>
                <td>{{section}}</td>
                <td>{{title}}</td>
                <td>{{author1}}</td>
                <td>{{author2}}</td>
                <td>{{volume}}</td>
                <td>{{genre1}}</td>
                <td>{{genre2}}</td>
                <td>{{rating}}</td>
            </tr>
        {{/bookList}}
        </tbody>
    </table>
</div>

{{>layouts/footer}}
